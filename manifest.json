{
  "manifest_version": 3,
  "name": "Coursera Grade Calculator",
  "version": "1.0",
  "description": "Calculates your overall current grade on Coursera using visible scores and weights.",
  "permissions": ["scripting", "tabs"],
  "host_permissions": [
    "https://www.coursera.org/learn/*/home/assignments*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
